{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/Components/*"],
      "containers/*": ["src/Containers/*"],
      "selectors": ["src/Selectors"],
      "actions/*": ["src/Actions/*"],
      "store": ["src/Store"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es6", "webworker", "esnext.asynciterable"],
    "jsx": "react",
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "files": ["globals.d.ts"],
  "exclude": ["node_modules", ".npm"]
}
