{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/Components/*"],
      "containers/*": ["src/Containers/*"],
      "actions/*": ["src/Actions/*"],
      "store": ["src/Store"],
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "files": ["globals.d.ts"],
  "exclude": ["node_modules", ".npm"]
}
